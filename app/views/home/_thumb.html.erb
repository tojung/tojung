        <%=image_tag(x.image0, class: "pro-thumbimg")%>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-1">
            <h5 class="card-title text-black font-weight-bold mb-0"><%=x.name%></h5>
            <span class="font-red font-weight-bold">980%</span>
          </div>
          <p class="card-text mb-2"><%=x.subname%></p>
          <div class="d-flex font-12 justify-content-between">
            <span class="funding-money"><%=x.funded_money%>원</span>
            <span class="funding-days">3일 남음</span>
          </div>
        </div>
      </a>
    </div>
  <%end%>
  <!-- Product Card -->
</div>
<!-- //Product Thumbnail -->

