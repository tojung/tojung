  <%#image_tag("/images/banner.png", class: "w-100")%>
  </a> -->
</section>

<!-- List -->
<section class="funding_list">
  <div class="container">
    <div class="row">
			<% @proposes.each do |propose| %>
				<div class="col-sm-12 col-md-6 col-lg-6 px-0 funding_card_box" style="background-image: url(<% if propose.image.url != nil %><%= propose.image.url %> <% else %> <%= propose.default_image %> <% end%>)">
	        <div class="funding_card d-flex flex-column h-100 w-100">
	          <a href="/propose/<%= propose.id %>" class="h-100">
              <h4 class="funding_title text-white mb-0"><%= propose.title %></h4>
	            <div class="funding_card_info">
                <p class="funding_num text-white text-right"><span class="funding_nums text-white"><% if propose.send_count != nil and propose.subscribe_count != nil%><%= propose.funded_num + propose.send_count + propose.subscribe_count %><%else%>0<% end %></span>명</p>
	              <p class="funding_money text-white text-right">&#8361;<%= propose.funded_money%></p>
	            </div>
	          </a>
	        </div>
	      </div>
			<% end %>
    </div>
  </div>
</section>
<!--//List  -->

<!-- typewriter js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/TypewriterJS/1.0.0/typewriter.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
    var app = document.getElementById('mention');

    var typewriter = new Typewriter(app, {
        loop: true
    });

    typewriter.typeString('겪고 있는 문제가 있나요?\n')
      .pauseFor(1000)
      .typeString('투정으로 끝나지 않게, 해결책이 될 법안을 찾아줄게요.')
      .pauseFor(2500)
      .start();
  });
</script>
<!-- //TypeWriter -->
<!-- 원화 콤마찍기 -->
<script type="text/javascript">
  function comma(str) {
      str = String(str);
      return str.replace(/(\d)(?=(?:\d{3})+(?!\d))/g, '$1,');
  }
  var i = 0
  while( i< $(".funding_money").length){
    var money=$(".funding_money")[i].innerHTML;
    var newMoney=comma(money);
    $(".funding_money")[i].innerHTML=newMoney;
    i+=1;
  }
</script>
<script type="text/javascript">
  function playVideo(x){
    x.play();
  }
</script>
