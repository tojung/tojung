    </video>
  <div class="brand pl-4 pt-4 visible-lg">
    <a class="navbar-brand py-0 mr-0" href="/">
      <%=image_tag( asset_path("tojung_white.png"), class:"logo")%>
    </a>
  </div>
  <div class="arrow visible-lg">
