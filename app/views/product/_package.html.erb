<nav id="packageBar" class="bg-white visible-xs">
  <div class="dismiss">
    <h4 class="font-14 font-weight-bold text-center my-3 package-title">패키지 선택하기</h4>
    <div class="package-row scrolling-wrapper">
      <% @product.packages.each do |package|%>
        <div class="card bg-white">
          <%=image_tag(@cdn_url + package.image0.path , class: "package-img d-block mx-auto", id: package.id) if package.image0.path != nil%>
          <div class="card-body2 text-center py-1 font-14">
            <p class="font-red mb-1 product-money"><%= package.price %>원</p>
            <h5 class="text-black font-weight-bold mb-1 font-14" lang="en"><%= package.name %></h5>
            <pre class="font-12 mb-2 package-content"><%= package.content.gsub("\r\n", "<br />").html_safe %></pre>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
