<section class="sign">
  <div class="social_sign">
    <%= render "devise/shared/links" %>
  </div>
  <%=image_tag("/assets/images/or.png", class: "or_img")%>
  <h3 class="sign_up_text font-sm-18">이메일로 로그인하기</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign_in"}) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "이메일", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호", class: "form-control line-1 font-sm-12" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="custom-control custom-checkbox d-flex">
      <%= f.check_box :remember_me, class: "custom-control-input", id: "customControlAutosizing" %>
      <label class="custom-control-label mb-3" for="customControlAutosizing">로그인 유지</label>
      <%= f.submit "로그인", class: "btn btn-primary sign_up_btn login_btn font-sm-12" %>
      <!-- <button type="submit" class="btn btn-primary sign_up_btn">로그인</button> -->
    </div>
    <% end -%>
    <div class="login_click">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "회원가입하기", new_registration_path(resource_name), class: "text-primary" %><br />
      <% end -%>
      <span>|</span>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name), class: "text-primary" %><br />
      <% end -%>
    </div>
  <% end %>
</section>
